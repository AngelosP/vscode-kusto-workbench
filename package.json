{
  "name": "vscode-kusto-workbench",
  "displayName": "Kusto Workbench",
  "description": "Notebook-like experience for Kusto Query Language (KQL) and more",
  "publisher": "angelos-petropoulos",
  "version": "0.1.6",
  "license": "MIT",
  "icon": "media/images/kusto-workbench-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/AngelosP/vscode-kusto-workbench.git"
  },
  "homepage": "https://github.com/AngelosP/vscode-kusto-workbench",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Kusto Workbench",
      "properties": {
        "kustoWorkbench.debug.mdSearchReveal": {
          "type": "boolean",
          "default": false,
          "description": "Shows diagnostic popups for Markdown Search-view reveal (Ctrl+Shift+F click) to help debug selection/reveal wiring."
        }
      }
    },
    "languages": [
      {
        "id": "kql",
        "aliases": [
          "Kusto Query",
          "KQL",
          "Kusto"
        ],
        "extensions": [
          ".kql",
          ".csl"
        ],
        "icon": {
          "light": "./media/images/kusto-file-light.svg",
          "dark": "./media/images/kusto-file-dark.svg"
        }
      },
      {
        "id": "kqlx",
        "aliases": [
          "Kusto Notebook",
          "KQLX"
        ],
        "extensions": [
          ".kqlx"
        ],
        "icon": {
          "light": "./media/images/kusto-file-light.svg",
          "dark": "./media/images/kusto-file-dark.svg"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "kusto.kqlxEditor",
        "displayName": "Kusto Session (.kqlx/.mdx)",
        "selector": [
          {
            "filenamePattern": "*.kqlx"
          },
          {
            "filenamePattern": "*.mdx"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "kusto.mdCompatEditor",
        "displayName": "Kusto Markdown (.md)",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      },
      {
        "viewType": "kusto.kqlCompatEditor",
        "displayName": "Kusto Query (Compatibility Mode)",
        "selector": [
          {
            "filenamePattern": "*.kql"
          },
          {
            "filenamePattern": "*.csl"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "kusto.openQueryEditor",
        "title": "Open Query Editor",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.openKqlxFile",
        "title": "Open .kqlx File",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.openMdxFile",
        "title": "Open .mdx File",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.saveKqlxAs",
        "title": "Save Session As... (.kqlx)",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.manageConnections",
        "title": "Manage Connections",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.deleteAllConnections",
        "title": "Delete All Connections",
        "category": "Kusto Workbench"
      },
      {
        "command": "kusto.seeCachedValues",
        "title": "Show Cached Values",
        "category": "Kusto Workbench"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "vsix": "npm run package && node scripts/package-vsix.mjs",
    "compile-tests": "node -e \"require('fs').rmSync('out/test',{recursive:true,force:true})\" && tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@toast-ui/editor": "^3.2.2",
    "@toast-ui/editor-plugin-color-syntax": "^3.1.0",
    "azure-kusto-data": "^7.0.3",
    "azure-kusto-ingest": "^7.0.3",
    "monaco-editor": "^0.53.0"
  }
}

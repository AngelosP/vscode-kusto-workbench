{
  "name": "notebooks-for-kusto",
  "displayName": "Notebooks for Kusto",
  "description": "Notebook-like experience for Kusto Query Language (KQL)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "kusto.kqlxEditor",
        "displayName": "Kusto Session (.kqlx)",
        "selector": [
          {
            "filenamePattern": "*.kqlx"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "kusto.kqlCompatEditor",
        "displayName": "Kusto Query (Compatibility Mode)",
        "selector": [
          {
            "filenamePattern": "*.kql"
          },
          {
            "filenamePattern": "*.csl"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "kusto.openQueryEditor",
        "title": "Kusto: Open Query Editor",
        "category": "Kusto"
      },
      {
        "command": "kusto.openKqlxFile",
        "title": "Kusto: Open .kqlx File",
        "category": "Kusto"
      },
      {
        "command": "kusto.saveKqlxAs",
        "title": "Kusto: Save Session As... (.kqlx)",
        "category": "Kusto"
      },
      {
        "command": "kusto.manageConnections",
        "title": "Kusto: Manage Connections",
        "category": "Kusto"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "azure-kusto-data": "^7.0.3",
    "azure-kusto-ingest": "^7.0.3",
    "monaco-editor": "^0.53.0"
  }
}
